<%=form_for @user do |f| %>
    
    <% if @user.errors = any? %>
    
    <% end %>

    <div class = 'feild'>
        <%= f.label 'First Name' %>
        <%= f.text_field :first_name, :required => true %>
    </div> 
    
    <div class = 'feild'>
        <%= f.label 'Last Name' %>
        <%= f.text_field :last_name, :required =>true %>
    </div>
    
